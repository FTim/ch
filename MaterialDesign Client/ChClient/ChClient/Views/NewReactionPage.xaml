        <dragablz:TabablzControl BorderThickness="0" FixedHeaderCount="3">

            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>

            <TabItem Header="Header">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition MinWidth="160" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Reaction code"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Code, Mode=TwoWay}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Chemist"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Chemist, Mode=TwoWay}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Chiefchemist"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Chiefchemist, Mode=TwoWay}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Project"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Project, Mode=TwoWay}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Laboratory"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Laboratory, Mode=TwoWay}" />
                            <DatePicker
                                Width="200"
                                Margin="4,12,4,12"
                                materialDesign:HintAssist.Hint="Date of start"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                Text="{Binding StartDate, Mode=TwoWay}" />
                            <DatePicker
                                Width="200"
                                Margin="4,12,4,8"
                                materialDesign:HintAssist.Hint="Date of closure"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                Text="{Binding ClosureDate, Mode=TwoWay}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Previous step"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding PreviousStep, Mode=TwoWay}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Literature"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Literature, Mode=TwoWay}" />
                            <Button
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Command="{Binding SelectReactionImg}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="ImagePlus" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        Text="Add reaction image" />
                                </Grid>
                            </Button>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            MinWidth="150"
                            Margin="12"
                            VerticalAlignment="Top"
                            Orientation="Vertical">
                            <Image
                                MaxWidth="500"
                                MaxHeight="500"
                                Margin="4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                IsEnabled="True"
                                Source="{Binding ReactionImgPath, Mode=TwoWay}"
                                Stretch="Uniform" />
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                VerticalAlignment="Top"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding ReactionCodeError, Mode=TwoWay}" />
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                VerticalAlignment="Top"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding ClosureDateError}" />
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                VerticalAlignment="Top"
                                Foreground="Orange"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding ClocureDateIgnore}" />
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                VerticalAlignment="Top"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding ReactionImageError}" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Starting Material">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="220" />
                            <ColumnDefinition MinWidth="220" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Command="{Binding AddMaterialAsStartingMaterial}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0" Kind="ShapePolygonPlus" />
                                    <TextBlock Grid.Column="1" Text="Add material" />
                                </Grid>
                            </Button>


                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Name"
                                IsEnabled="False"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SMName, Mode=TwoWay}" />
                            <TextBlock Margin="4" Text="CAS will be added" />

                            <TextBox
                                x:Name="StartingMaterialAddmTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="m"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <TextBox
                                x:Name="StartingMaterialAddVTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="V"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <Button
                                x:Name="StartingMaterialAddBtn"
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TableRowPlusBefore" />
                                    <TextBlock Text=" Add                      " />
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding StartingMaterialProblem, Mode=TwoWay}" />

                        </StackPanel>
                        <ListView
                            Name="StartingMaterialListView"
                            Grid.Row="1"
                            MinWidth="400"
                            Margin="16,4,4,4"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding StartingMaterialList, Mode=TwoWay}">
                            <ListView.View>
                                <GridView>

                                    <GridViewColumn
                                        Width="200"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="Name" />
                                    <GridViewColumn
                                        Width="80"
                                        DisplayMemberBinding="{Binding CAS}"
                                        Header="CAS" />
                                    <GridViewColumn
                                        Width="60"
                                        DisplayMemberBinding="{Binding mValue}"
                                        Header="m" />
                                    <GridViewColumn
                                        Width="60"
                                        DisplayMemberBinding="{Binding VValue}"
                                        Header="V" />
                                    <GridViewColumn Width="200" Header="">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button
                                                        x:Name="StartingMaterialMod"
                                                        Width="50"
                                                        Margin="0,0,5,0"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Pencil" />

                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        x:Name="StartingMaterialDelBtn"
                                                        Width="50"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="DeleteEmpty" />

                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>

                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel
                            Grid.Row="2"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">

                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit name"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.Name, ElementName=StartingMaterialListView}" />
                            <!--  TextBox materialDesign:HintAssist.Hint="Edit CAS" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" Margin="4" Text="{Binding SelectedItem.CAS, ElementName=StartingMaterialListView}"/  -->
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit m"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.mValue, ElementName=StartingMaterialListView}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit V"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.VValue, ElementName=StartingMaterialListView}" />

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Reagents">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button
                                x:Name="ReagentAddNameBtn"
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Command="{Binding AddMaterialAsReagent}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ShapePolygonPlus" />
                                    <TextBlock Text=" Add material        " />
                                </StackPanel>
                            </Button>

                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Name"
                                IsEnabled="False"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding RName, Mode=TwoWay}" />
                            <TextBlock Margin="4" Text="CAS will be added" />
                            <TextBox
                                x:Name="ReagentAddRatioTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Ratio"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <Button
                                x:Name="ReagentAddBtn"
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TableRowPlusBefore" />
                                    <TextBlock Text=" Add                      " />
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding ReagentProblem, Mode=TwoWay}" />

                        </StackPanel>

                        <ListView
                            Name="ReagentListView"
                            Grid.Row="1"
                            MinWidth="400"
                            Margin="16,4,4,4"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding ReagentList, Mode=TwoWay}">
                            <ListView.View>
                                <GridView>

                                    <GridViewColumn
                                        Width="200"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="Name" />
                                    <GridViewColumn
                                        Width="80"
                                        DisplayMemberBinding="{Binding CAS}"
                                        Header="CAS" />
                                    <GridViewColumn
                                        Width="80"
                                        DisplayMemberBinding="{Binding Ratio}"
                                        Header="Ratio" />
                                    <GridViewColumn Width="200" Header="">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button
                                                        x:Name="ReagentMod"
                                                        Width="50"
                                                        Margin="0,0,5,0"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Pencil" />

                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        x:Name="ReagentDelBtn"
                                                        Width="50"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="DeleteEmpty" />

                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>

                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel
                            Grid.Row="2"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit name"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.Name, ElementName=ReagentListView}" />
                            <!--  TextBox materialDesign:HintAssist.Hint="Edit CAS" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" Margin="4" Text="{Binding SelectedItem.CAS, ElementName=ReagentListView}"/  -->
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit ratio"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.Ratio, ElementName=ReagentListView}" />

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Solvents">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="220" />
                            <ColumnDefinition MinWidth="220" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button
                                x:Name="SolventAddNameBtn"
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ShapePolygonPlus" />
                                    <TextBlock Text=" Add material        " />
                                </StackPanel>
                            </Button>

                            <TextBox
                                x:Name="SolventAddNameTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Name"
                                IsEnabled="False"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <TextBlock Margin="4" Text="CAS will be added" />
                            <TextBox
                                x:Name="SolventAddVTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="V"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <Button
                                x:Name="SolventAddBtn"
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TableRowPlusBefore" />
                                    <TextBlock Text=" Add                      " />
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding SolventProblem, Mode=TwoWay}" />

                        </StackPanel>
