                            HorizontalAlignment="Left"
                            ItemsSource="{Binding SolventList, Mode=TwoWay}">
                            <ListView.View>
                                <GridView>

                                    <GridViewColumn
                                        Width="200"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="Name" />
                                    <GridViewColumn
                                        Width="80"
                                        DisplayMemberBinding="{Binding CAS}"
                                        Header="CAS" />
                                    <GridViewColumn
                                        Width="60"
                                        DisplayMemberBinding="{Binding VValue}"
                                        Header="V" />
                                    <GridViewColumn Width="200" Header="">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button
                                                        x:Name="SolventMod"
                                                        Width="50"
                                                        Margin="0,0,5,0"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Pencil" />

                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        x:Name="SolventDelBtn"
                                                        Width="50"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="DeleteEmpty" />

                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>

                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel
                            Grid.Row="2"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit name"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.Name, ElementName=SolventListView}" />
                            <!--  TextBox materialDesign:HintAssist.Hint="Edit CAS" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" Margin="4" Text="{Binding SelectedItem.CAS, ElementName=SolventListView}"/  -->
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit V"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.VValue, ElementName=SolventListView}" />

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Product(s)">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="220" />
                            <ColumnDefinition MinWidth="220" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBox
                                x:Name="ProductAddMWTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="MW"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <TextBox
                                x:Name="ProductAddRatioTB"
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Ratio"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <!--  TextBox materialDesign:HintAssist.Hint="n" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" Margin="4" x:Name="ProductAddnTB"/  -->

                            <Button
                                x:Name="ProductAddBtn"
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TableRowPlusBefore" />
                                    <TextBlock Text=" Add                      " />
                                </StackPanel>
                            </Button>
                            <Button
                                Width="180"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CommentQuestionOutline" />
                                    <TextBlock Text=" Name-CAS hints" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBlock
                                MinWidth="200"
                                Margin="4"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="{Binding ProductProblem, Mode=TwoWay}" />

                        </StackPanel>
                        <ListView
                            Name="ProductListView"
                            Grid.Row="1"
                            MinWidth="400"
                            Margin="16,4,4,4"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding ProductList, Mode=TwoWay}">
                            <ListView.View>
                                <GridView>

                                    <GridViewColumn
                                        Width="200"
                                        DisplayMemberBinding="{Binding MWValue}"
                                        Header="MW" />
                                    <GridViewColumn
                                        Width="80"
                                        DisplayMemberBinding="{Binding Ratio}"
                                        Header="Ratio" />
                                    <!--  GridViewColumn DisplayMemberBinding="{Binding nValue}" Header="n" Width="60"/  -->
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel
                            Grid.Row="2"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit MW"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.MWValue, ElementName=ProductListView}" />
                            <TextBox
                                Width="200"
                                Margin="4"
                                materialDesign:HintAssist.Hint="Edit ratio"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding SelectedItem.Ratio, ElementName=ProductListView}" />
                            <!--  TextBox materialDesign:HintAssist.Hint="Edit n" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" Margin="4" Text="{Binding SelectedItem.nValue, ElementName=ProductListView}"/  -->

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Procedure, observation">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition MinWidth="150" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Label Margin="4,0,4,0" Content="Check the Sketch option and" />
                            <Label Margin="4,0,4,0" Content="leave the fields empty to skip" />
                            <Label Margin="4,0,4,0" Content="this part in the report" />

                            <TextBox
                                x:Name="ProcedureTB"
                                Width="220"
                                Height="80"
                                Margin="4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                materialDesign:HintAssist.Hint="Procedure"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                            <TextBox
                                x:Name="YieldTB"
                                Width="220"
                                Margin="4"
                                HorizontalAlignment="Left"
                                materialDesign:HintAssist.Hint="Yield"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <TextBox
                                x:Name="ObservationTB"
                                Width="220"
                                Height="80"
                                Margin="4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                materialDesign:HintAssist.Hint="Observation"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                            <Button
                                x:Name="AddObservationImgBtn"
                                Width="210"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ImagePlus" />
                                    <TextBlock Text=" Add observation image" />
                                </StackPanel>
                            </Button>
                            <CheckBox
                                Margin="4"
                                Content="Sketch"
                                IsChecked="{Binding IsSketch, Mode=TwoWay}"
                                Style="{StaticResource MaterialDesignCheckBox}" />


                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            MinWidth="150"
                            Margin="12">
                            <TextBlock
                                x:Name="ObservationImgProblemTB"
                                MinWidth="200"
                                Margin="4"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            <Image
                                x:Name="ObservationImgImg"
                                Grid.Row="1"
                                Width="200"
                                Height="200"
                                Margin="4"
                                HorizontalAlignment="Left"
                                Stretch="Uniform" />
                        </StackPanel>

                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Save Docx">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button
                                x:Name="SaveLocationBtn"
                                Width="210"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FolderStar" />
                                    <TextBlock Text=" Select save location" />
                                </StackPanel>
                            </Button>
                            <Button
                                Width="210"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Command="{Binding SaveReaction}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Floppy" />
                                    <TextBlock Text=" Save                         " />
                                </StackPanel>
                            </Button>
                            <Button
                                x:Name="NewReactionBtn"
                                Width="210"
                                Margin="4,8,8,8"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignRaisedLightButton}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileOutline" />
                                    <TextBlock Text=" New reaction           " />
                                </StackPanel>
                            </Button>
                            <CheckBox
                                x:Name="ClearHeaderCB"
                                Margin="4"
                                Content="Clear header inputs"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearStartingMaterialCB"
                                Margin="4"
                                Content="Clear starting material"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearReagentCB"
                                Margin="4"
                                Content="Clear reagent list"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearSolventCB"
                                Margin="4"
                                Content="Clear solvent list"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearProductCB"
                                Margin="4"
                                Content="Clear product"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearProcedureCB"
                                Margin="4"
                                Content="Clear procedure and observation inputs"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />

                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            Margin="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <TextBlock
                                x:Name="DocxLocationProblemTB"
                                MinWidth="200"
                                Margin="4"
                                Foreground="Red"
                                Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            <TextBlock
                                x:Name="DocxSaveProblemTB"
                                MinWidth="200"
                                Margin="4"
                                Style="{StaticResource MaterialDesignBody2TextBlock}" />

                            <CheckBox
                                x:Name="ClearStartingMaterialInputsCB"
                                Margin="4,127,4,4"
                                Content="Clear input fields too"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearReagentInputsCB"
                                Margin="4"
                                Content="Clear input fields too"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearSolventInputsCB"
                                Margin="4"
                                Content="Clear input fields too"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                            <CheckBox
                                x:Name="ClearProductInputsCB"
                                Margin="4"
                                Content="Clear input fields too"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignCheckBox}" />
                        </StackPanel>

                    </Grid>
                </ScrollViewer>
            </TabItem>

        </dragablz:TabablzControl>
    </Grid>
</Page>
