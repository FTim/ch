<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:WpfApp4.ViewModel"
    x:Class="WpfApp4.View.MainPage"
        Title="Reaction Demo" Height="485" Width="525" ResizeMode="NoResize">
    <TabControl HorizontalAlignment="Left" VerticalAlignment="Top" TabStripPlacement="Top" IsTabStop="True" Height="485" Width="525">
        <TabItem Header="Header">
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,7,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtReactionCode"/>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,35,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtChemist"/>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,63,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtChiefchemist"  />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,91,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtProject" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,119,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtLaboratory"  />
                <DatePicker Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,147,0,0" VerticalAlignment="Top" Width="178" x:Name="datetimeStart"/>
                <DatePicker Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,175,0,0" VerticalAlignment="Top" Width="178" x:Name="datetimeClosure"/>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,203,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtPreviousStep" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,231,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtLiterature" />
                <Button Content="Add image..." Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,259,0,0" VerticalAlignment="Top" Width="178" x:Name="btnAddRectionImg" Click="btnAddRectionImg_Click"/>
                <Label Content="Reaction code" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0" VerticalAlignment="Top" />
                <Label Content="Chemist" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,35,0,0"  VerticalAlignment="Top" />
                <Label Content="Chiefchemist" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,63,0,0"  VerticalAlignment="Top" />
                <Label Content="Project" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,91,0,0" VerticalAlignment="Top" />
                <Label Content="Laboratory" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,119,0,0" VerticalAlignment="Top" />
                <Label Content="Date of start" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,147,0,0" VerticalAlignment="Top" />
                <Label Content="Date of closure" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,175,0,0" VerticalAlignment="Top" />
                <Label Content="Previous step" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,203,0,0" VerticalAlignment="Top" />
                <Label Content="Literature" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,231,0,0" VerticalAlignment="Top" />
                <Label Content="Reaction image" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,259,0,0" VerticalAlignment="Top" />

            </Grid>
        </TabItem>

        <TabItem Header="StartingMaterial">
            
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView x:Name="StartingMaterialList" Grid.Row="1" Margin="0,175,0,0"  Width="400" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" ItemsSource="{Binding smaterialList}">

                    <ListView.View>
                        <GridView x:Name="StartingMaterialGrid">
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"  Width="200"/>
                            <GridViewColumn Header="CAS" DisplayMemberBinding="{Binding CAS}"  Width="80" />
                            <GridViewColumn Header="m" DisplayMemberBinding="{Binding mValue}" Width="60" />
                            <GridViewColumn Header="V" DisplayMemberBinding="{Binding VValue}" Width="60" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,7,0,0" x:Name="txtSMName" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.Name, ElementName=StartingMaterialList}" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,35,0,0" x:Name="txtSMCAS" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.CAS, ElementName=StartingMaterialList}" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,63,0,0" x:Name="txtSMmValue" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.mValue, ElementName=StartingMaterialList}" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,91,0,0" x:Name="txtSMVValue" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.VValue, ElementName=StartingMaterialList}" />

                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,7,0,0" x:Name="txtSMAddName" VerticalAlignment="Top" Width="178"  />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,35,0,0" x:Name="txtSMAddCAS" VerticalAlignment="Top" Width="178" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,63,0,0" x:Name="txtSMAddmValue" VerticalAlignment="Top" Width="178"  />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,91,0,0" x:Name="txtSMAddVValue" VerticalAlignment="Top" Width="178"  />
                <Label Content="Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0"  VerticalAlignment="Top" />
                <Label Content="CAS" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,35,0,0"  VerticalAlignment="Top" />
                <Label Content="m" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,63,0,0" VerticalAlignment="Top" />
                <Label Content="V" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,91,0,0"  VerticalAlignment="Top" />
                
                <Button Content="Add" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,119,0,0" x:Name="btnSMAdd" 
                VerticalAlignment="Top" Width="178"
                 Click="btnSMAdd_Click"/>
                <Button Content="Name-CAS hints" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,119,0,0"
                VerticalAlignment="Top" Width="178"
                 Click="btnHint_Click"/>
            </Grid>
        </TabItem>

        <TabItem Header="Reagents">
            
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView x:Name="ReagentsList" Grid.Row="1" Margin="0,175,0,0" Width="400" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" ItemsSource="{Binding reagentList}">


                    <ListView.View>
                        <GridView x:Name="ReagentGrid">
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name, Mode=TwoWay}"  Width="200"/>
                            <GridViewColumn Header="CAS" DisplayMemberBinding="{Binding CAS, Mode=TwoWay}"  Width="80" />
                            <GridViewColumn Header="Ratio" DisplayMemberBinding="{Binding Ratio, Mode=TwoWay}" Width="60" />

                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,7,0,0" x:Name="txtRName" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.Name, ElementName=ReagentsList}"/>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,35,0,0" x:Name="txtRCAS" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.CAS, ElementName=ReagentsList}" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,63,0,0" x:Name="txtRRatio" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.Ratio, ElementName=ReagentsList}" />


                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,7,0,0" x:Name="txtRAddName" VerticalAlignment="Top" Width="178" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,35,0,0" x:Name="txtRAddCAS" VerticalAlignment="Top" Width="178" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,63,0,0" x:Name="txtRAddRatio" VerticalAlignment="Top" Width="178" />

                <Label Content="Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0" VerticalAlignment="Top" />
                <Label Content="CAS" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,35,0,0" VerticalAlignment="Top" />
                <Label Content="Ratio" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,63,0,0" VerticalAlignment="Top" />

                

                <Button Content="Add" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,119,0,0" x:Name="btnRAdd" 
                VerticalAlignment="Top" Width="178"
                Click="btnRAdd_Click"
                  />
                <Button Content="Name-CAS hints" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,119,0,0"
                VerticalAlignment="Top" Width="178"
                 Click="btnHint_Click"/>

            </Grid>
        </TabItem>
        <TabItem Header="Solvents">
            
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView x:Name="SolventsList" Grid.Row="1" Margin="0,175,0,0"   ItemsSource="{Binding solventList}" Width="400" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <ListView.View>
                        <GridView x:Name="SolventsGrid">
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"  Width="200"/>
                            <GridViewColumn Header="CAS" DisplayMemberBinding="{Binding CAS}"  Width="80" />
                            <GridViewColumn Header="V" DisplayMemberBinding="{Binding VValue}" Width="60" />
                        </GridView>
                    </ListView.View>

                </ListView>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,7,0,0" x:Name="txtSName" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.Name, ElementName=SolventsList}" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,35,0,0" x:Name="txtSCAS" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.CAS, ElementName=SolventsList}" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,63,0,0" x:Name="txtSmValue" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.VValue, ElementName=SolventsList}" />

                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,7,0,0" x:Name="txtSAddName" VerticalAlignment="Top" Width="178"  />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,35,0,0" x:Name="txtSAddCAS" VerticalAlignment="Top" Width="178" />
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,63,0,0" x:Name="txtSAddVValue" VerticalAlignment="Top" Width="178"  />
                <Label Content="Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0"  VerticalAlignment="Top" />
                <Label Content="CAS" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,35,0,0"  VerticalAlignment="Top" />
                <Label Content="V" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,63,0,0" VerticalAlignment="Top" />
                
                <Button Content="Add" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="288,119,0,0" x:Name="btnSAdd" 
                VerticalAlignment="Top" Width="178" Click="btnSAdd_Click"
                 />
                <Button Content="Name-CAS hints" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,119,0,0"
                VerticalAlignment="Top" Width="178"
                 Click="btnHint_Click"/>
            </Grid>
        </TabItem>
        <TabItem Header="Procedure, observation">

            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="1" Height="46" HorizontalAlignment="Left" Margin="120,7,0,0"  VerticalAlignment="Top" Width="348" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" x:Name="txtProcedure"/>
                <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,63,0,0"  VerticalAlignment="Top" Width="178" x:Name="txtYield"/>
                <TextBox Grid.Row="1" Height="46" HorizontalAlignment="Left" Margin="120,91,0,0"  VerticalAlignment="Top" Width="348" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" x:Name="txtObservation"  />
                <Button Content="Add image..." Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,147,0,0" VerticalAlignment="Top" Width="178" x:Name="btnAddObservationImg" Click="btnAddObservationImg_Click"/>
                <Label Content="Procedure" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0" VerticalAlignment="Top" />
                <Label Content="Yield" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,63,0,0"  VerticalAlignment="Top" />
                <Label Content="Observation" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,91,0,0"  VerticalAlignment="Top" />
                <Label Content="Observation image" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,147,0,0" VerticalAlignment="Top" />
                <Label Content="Docx location" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,175,0,0" VerticalAlignment="Top" />
                <Label Content="Selected location: " Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,203,0,0" VerticalAlignment="Top" />

                <Button Content="Select Docx location" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,175,0,0" VerticalAlignment="Top" Width="178" x:Name="btnSelectLocation" Click="btnSelectLocation_Click"/>

                <Button Content="Save Docx" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="120,259,0,0" VerticalAlignment="Top" Width="178" x:Name="btnSaveDocx" Click="btnSaveDocx_Click"/>

            </Grid>
        </TabItem>
    </TabControl>
</Window>
